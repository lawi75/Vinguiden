<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="ws.wiklund.vinguiden"
      android:versionCode="7"
      android:versionName="2.0.1">
	<uses-sdk android:minSdkVersion="10" />
	
 	<uses-permission
        android:name="android.permission.INTERNET" />
 	<uses-permission 
 	    android:name="android.permission.ACCESS_NETWORK_STATE"/>
	
	<!--
	Needed for paypal 
	<uses-permission 
	    android:name="android.permission.READ_PHONE_STATE"/>
     -->    
    <application 
    	android:icon="@drawable/icon" 
    	android:label="@string/app_name" 
    	android:theme="@style/CustomTheme"
    	android:debuggable="false">
        <activity android:name="ws.wiklund.vinguiden.activities.WineListActivity"
                  android:label="@string/wine_list_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>            
        </activity>
        
        <activity android:name=".activities.AddWineActivity"
        		  android:label="@string/add_wine_name" 
        		  android:noHistory="true" />

        <activity android:name=".activities.ModifyWineActivity"
        		  android:label="@string/modify_wine_name" 
        		  android:noHistory="true" />

        <activity android:name=".activities.WineActivity"
        		  android:label="@string/wine_name" />

        <activity android:name=".activities.AboutActivity"
        		  android:label="@string/app_name" 
        		  android:noHistory="true" />
        
        <activity android:name=".activities.StatsActivity"
        		  android:label="@string/stats" 
        		  android:noHistory="true" />
        
        <activity android:name=".activities.FullAdActivity" 
        		  android:noHistory="true" />
        
        <activity android:name=".activities.DonateActivity" 
        		  android:noHistory="true" />
        
        <activity android:name="com.google.ads.AdActivity"
              android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
       		  android:noHistory="true" />

        <activity android:name="com.paypal.android.MEP.PayPalActivity"
 				  android:theme="@android:style/Theme.Translucent.NoTitleBar"
 				  android:configChanges="keyboardHidden|orientation" />
        
        <activity android:name=".activities.WineTabsActivity" />

      	<provider
            android:authorities="ws.wiklund.vinguiden.db.CellarProvider"
            android:multiprocess="true"
            android:name="ws.wiklund.vinguiden.db.CellarProvider" />
      	
      	 <receiver android:name="ws.wiklund.vinguiden.util.AlarmReceiver"></receiver>
        
	</application>
</manifest>